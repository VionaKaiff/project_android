<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MateriActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/referensi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REFERENSI"
            android:textColor="@color/primarycolor"
            android:textSize="50dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/passionone_bold"/>

        <ImageView
            android:id="@+id/logo_app"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/gambar_referensi" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300dp"
            android:text="Referensi 1"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/natsreguler"
            android:textColor="@color/white"
            android:id="@+id/referensi_1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300dp"
            android:layout_marginTop="20dp"
            android:text="Referensi 2"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/natsreguler"
            android:textColor="@color/white"
            android:id="@+id/referensi_2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300dp"
            android:layout_marginTop="20dp"
            android:text="Referensi 3"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/natsreguler"
            android:textColor="@color/white"
            android:id="@+id/referensi_3"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300dp"
            android:layout_marginTop="20dp"
            android:text="Referensi 4"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/natsreguler"
            android:textColor="@color/white"
            android:id="@+id/referensi_4"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300dp"
            android:layout_marginTop="20dp"
            android:text="Referensi 5"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/natsreguler"
            android:textColor="@color/white"
            android:id="@+id/referensi_5"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300dp"
            android:layout_marginTop="20dp"
            android:text="Referensi 6"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/natsreguler"
            android:textColor="@color/white"
            android:id="@+id/referensi_6"/>

    </LinearLayout>

</ScrollView>