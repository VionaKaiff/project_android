<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MEDIA PENDIDIKAN"
        android:textColor="@color/primarycolor"
        android:textSize="35dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/passionone_bold"/>

    <ImageView
        android:id="@+id/home"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/media"
        android:src="@drawable/logo_home" />

    <TextView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home"
        android:text="MENU"
        android:textColor="@color/primarycolor"
        android:textSize="30dp"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/natsreguler"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menu"
        android:width="300dp"
        android:text="MATERI"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/natsreguler"
        android:textColor="@color/white"
        android:id="@+id/materi"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/materi"
        android:layout_marginTop="30dp"
        android:width="300dp"
        android:text="REFERENSI"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/natsreguler"
        android:textColor="@color/white"
        android:id="@+id/referensi"/>
</RelativeLayout>